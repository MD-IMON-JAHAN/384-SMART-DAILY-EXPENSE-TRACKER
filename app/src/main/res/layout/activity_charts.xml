<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Total Income -->
            <TextView
                android:id="@+id/totalIncomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Income: $0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/text_color_primary" />

            <!-- Total Expense -->
            <TextView
                android:id="@+id/totalExpenseText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Expense: $0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/text_color_primary" />

            <!-- Net Balance -->
            <TextView
                android:id="@+id/netBalanceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Net Balance: $0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/text_color_primary" />

            <!-- Daily Average -->
            <TextView
                android:id="@+id/averageDailyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Average: $0.00"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/text_color_primary" />

            <!-- Top Category -->
            <TextView
                android:id="@+id/mostSpentCategoryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Category: No entries yet"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/text_color_primary" />

            <!-- Category Breakdown -->
            <TextView
                android:id="@+id/categoryBreakdownText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Category Breakdown:\n\nNo entries to display"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/text_color_primary" />

            <!-- Weekly Breakdown -->
            <TextView
                android:id="@+id/weeklyBreakdownText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Last 7 Days:\n\nNo entries to display"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/text_color_primary" />

            <!-- Budget Progress -->
            <TextView
                android:id="@+id/budgetProgressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’° Budget Progress:\n\nNo data available"
                android:textSize="14sp"
                android:textColor="@color/text_color_primary" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>