<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for light mode -->
    <style name="Theme.SmartDailyExpenseTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Toolbar and Action Bar colors -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>

        <!-- Menu and Overflow colors for light theme -->
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="actionMenuTextColor">@color/text_color_primary</item>
        <item name="android:itemTextAppearance">@style/MenuTextAppearance</item>

        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Menu text appearance for light theme -->
    <style name="MenuTextAppearance" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
</resources>